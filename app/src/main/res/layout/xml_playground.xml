<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/pilihPromo"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        app:cardCornerRadius="10dp"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Promo"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:alpha="0.7"
                android:layout_height="25dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/bukaPromosi"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="14dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/promoImageCard"
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/promoImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/black_transparent" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/namaPromo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/promoImageCard"
                    android:layout_marginStart="8dp"

                    android:layout_marginTop="8dp"
                    android:alpha="0.8"
                    android:maxLines="1"
                    android:text="Judul"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/valuePromo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/namaPromo"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:alpha="0.8"
                    android:text="Judul"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:elevation="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/removePromo"
                android:layout_width="30dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:alpha="0.8"
                android:layout_height="30dp"
                app:cardBackgroundColor="@color/grey"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_margin="6dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_close"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>