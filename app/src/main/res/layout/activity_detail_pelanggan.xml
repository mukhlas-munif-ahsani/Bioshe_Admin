<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detailPelanggan.DetailPelangganActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/back_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="0dp"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:src="@drawable/ic_baseline_arrow_back"
                        app:tint="@color/biru_dasar" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/detailPelangganJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:text="Detail Pelanggan"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPelangganFoto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@id/detailPelangganJudul"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/pelangganFoto"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_profile" />
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/relPelangganEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardPelangganFoto"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/judulPelangganEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="4dp"
                    android:text="E-mail"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/pelangganEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganEmail"
                    android:layout_marginStart="14dp"
                    android:text="MukhlasMunifAhsani@gg.com"
                    android:textColor="@color/black" />

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/pelangganEmailShimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganEmail"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="14dp"
                        android:backgroundTint="@color/grey"
                        app:cardElevation="0dp" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <RelativeLayout
                    android:id="@+id/pelangganEmailBtn"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_baseline_email"
                        app:tint="@color/biru_dasar" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relPelangganNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relPelangganEmail"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/judulPelangganNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="4dp"
                    android:text="Nama"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/pelangganNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganNama"
                    android:layout_marginStart="14dp"
                    android:text="Mukhlas Munif Ahsani"
                    android:textColor="@color/black" />

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/pelangganNamaShimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganNama"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="14dp"
                        android:backgroundTint="@color/grey"
                        app:cardElevation="0dp" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <RelativeLayout
                    android:id="@+id/pelangganChatBtn"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_chat_active" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relPelangganNIK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relPelangganNama"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/judulPelangganNIK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="4dp"
                    android:text="NIK"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/pelangganNIK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganNIK"
                    android:layout_marginStart="14dp"
                    android:text="08993459939528992384859358849"
                    android:textColor="@color/black" />

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/pelangganNIKShimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganNIK"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="14dp"
                        android:backgroundTint="@color/grey"
                        app:cardElevation="0dp" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <RelativeLayout
                    android:id="@+id/pelangganNIKCopyBtn"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_baseline_content_copy"
                        app:tint="@color/biru_dasar" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relPelangganGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relPelangganNIK"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/judulPelangganGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="4dp"
                    android:text="Gender"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/pelangganGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganGender"
                    android:layout_marginStart="14dp"
                    android:text="COWEK"
                    android:textColor="@color/black" />

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/pelangganGenderShimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganGender"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="14dp"
                        android:backgroundTint="@color/grey"
                        app:cardElevation="0dp" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <RelativeLayout
                    android:layout_width="70dp"

                    android:layout_height="50dp"

                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_baseline_content_copy"
                        android:visibility="invisible"
                        app:tint="@color/biru_dasar" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relPelangganNohp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relPelangganGender"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/judulPelangganNohp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="4dp"
                    android:text="No Hp"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/pelangganNohp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganNohp"
                    android:layout_marginStart="14dp"
                    android:text="082301198226"
                    android:textColor="@color/black" />

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/pelangganNohpShimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganNohp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="14dp"
                        android:backgroundTint="@color/grey"
                        app:cardElevation="0dp" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <RelativeLayout
                    android:id="@+id/pelangganTeleponBtn"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_baseline_phone"
                        app:tint="@color/biru_dasar" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relPelangganNowa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relPelangganNohp"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/judulPelangganNowa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="4dp"
                    android:text="No WhatApp"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/pelangganNowa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganNowa"
                    android:layout_marginStart="14dp"
                    android:text="082301198226"
                    android:textColor="@color/black" />

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/pelangganNowaShimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganNowa"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="14dp"
                        android:backgroundTint="@color/grey"
                        app:cardElevation="0dp" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <RelativeLayout
                    android:id="@+id/pelangganWhatsappBtn"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_chat_active"
                        app:tint="@color/biru_dasar" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relPelangganAlamatRumah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relPelangganNowa"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/judulPelangganAlamatRumah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="4dp"
                    android:text="Alamat RUmah"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/pelangganAlamatRumah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganAlamatRumah"
                    android:layout_marginStart="14dp"
                    android:text="Shit happen"
                    android:textColor="@color/black" />

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/pelangganAlamatRumahShimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganAlamatRumah"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="14dp"
                        android:backgroundTint="@color/grey"
                        app:cardElevation="0dp" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <RelativeLayout
                    android:layout_width="70dp"

                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="false"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_chat_active"
                        android:visibility="invisible"
                        app:tint="@color/biru_dasar" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relPelangganAhliWaris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relPelangganAlamatRumah"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/judulPelangganAhliWaris"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="4dp"
                    android:text="Ahli Waris"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/pelangganAhliWaris"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganAhliWaris"
                    android:layout_marginStart="14dp"
                    android:text="Nairobi"
                    android:textColor="@color/black" />

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/pelangganAhliWarisShimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganAhliWaris"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="14dp"
                        android:backgroundTint="@color/grey"
                        app:cardElevation="0dp" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <RelativeLayout
                    android:layout_width="70dp"

                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="false"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_chat_active"
                        android:visibility="invisible"
                        app:tint="@color/biru_dasar" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relPelangganNamaOutlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relPelangganAhliWaris"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/judulPelangganNamaOutlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="4dp"
                    android:text="Nama Outlet"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/pelangganNamaOutlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganNamaOutlet"
                    android:layout_marginStart="14dp"
                    android:text="Shit scary scary"
                    android:textColor="@color/black" />

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/pelangganNamaOutletShimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganNamaOutlet"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="14dp"
                        android:backgroundTint="@color/grey"
                        app:cardElevation="0dp" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="false"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_chat_active"
                        android:visibility="invisible"
                        app:tint="@color/biru_dasar" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relPelangganAlamatOutlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relPelangganNamaOutlet"
                android:layout_marginTop="14dp">

                <TextView
                    android:id="@+id/judulPelangganAlamatOutlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="4dp"
                    android:text="Alamat Outlet"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/pelangganAlamatOutlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganAlamatOutlet"
                    android:layout_marginStart="14dp"
                    android:text="Goa Buntu"
                    android:textColor="@color/black" />

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/pelangganAlamatOutletShimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judulPelangganAlamatOutlet"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="14dp"
                        android:backgroundTint="@color/grey"
                        app:cardElevation="0dp" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="false"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_chat_active"
                        android:visibility="invisible"
                        app:tint="@color/biru_dasar" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>